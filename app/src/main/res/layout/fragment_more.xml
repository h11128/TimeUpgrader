<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:textSize="48sp"
        android:text="fragment"/>
    <Button
        android:id="@+id/btnAccountManagement"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Account" />
    <Button
        android:id="@+id/btnSettings"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="settings"
        app:layout_constraintTop_toBottomOf="@+id/btnAccountManagement"/>
    <Button
        android:id="@+id/btnAchievement"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Achievement"
        app:layout_constraintTop_toBottomOf="@+id/btnSettings"/>
    <Button
        android:id="@+id/btnTheme"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Theme"
        app:layout_constraintTop_toBottomOf="@+id/btnAchievement"/>
    <Button
        android:id="@+id/btnHelp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Help"
        app:layout_constraintTop_toBottomOf="@+id/btnTheme"/>

    <Button
        android:id="@+id/btnSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync"
        app:layout_constraintTop_toBottomOf="@+id/btnHelp" />

</RelativeLayout>
